<h1>New Game</h1>

<div class="containerbox">
  <% @letters.each do |letter| %>
  <div class="container-letter">
    <%=letter%>
  </div>
  <%end%>
</div>

<div class="play">
  <p>What is the longest word you can find?</p>
  <form class="form-inline" action="score" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <div class="form-group">
      <input type="text" class="form-control" id="formGroupExampleInput" name="answer" >
      <input id="tags_list" name="letters" type="hidden" value= '<%=@letters.join(",")%>'/>
    </div>
    <button type="submit" class="btn btn-primary" value="Ask!" id="btnblue" >Play!</button>
  </form>
</div>

